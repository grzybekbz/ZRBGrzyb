@model Photo

@{
    ViewBag.Title = "Dodaj zdjęcie";
    Layout = "_AdminLayout";
}

<div class="admin">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="PhotoID" />
        <div class="form-group">
            <label asp-for="FileToUpload">Wybierz Plik</label>
            <input asp-for="FileToUpload" type="file"
                   class="form-control" accept=".png, .jpg, .jpeg"
                   onchange='document.getElementById("fname").value = this.files[0].name' />
        </div>
        <div class="form-group">
            <label asp-for="FileName">Nazwa pliku</label>
            <div><span asp-validation-for="FileName" class="text-danger"></span></div>
            <textarea asp-for="FileName" id="fname" class="form-control" readonly></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Description">Opis</label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CategoryID">Kategoria</label>
            <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                <option value="-1"></option>

            </select>
        </div>
        <input asp-for="AddDate" type="hidden" class="form-control"/>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>