@model Photo

@{
    ViewBag.Title = "Edytuj zdjęcie";
    Layout = "_AdminLayout";
}

<div class="admin">

    <img src="@ViewBag.Thumb" class="editThumb" alt="@Model.FileName" />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PhotoID" />
        <div class="form-group">
            <label asp-for="FileName">Nazwa pliku</label>
            <div><span asp-validation-for="FileName" class="text-danger"></span></div>
            <input asp-for="FileName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description">Opis</label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CategoryID">Kategoria</label>
            <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
            <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="AddDate">Data</label>
            <div><span asp-validation-for="AddDate" class="text-danger"></span></div>
            <input asp-for="AddDate" type="datetime" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>