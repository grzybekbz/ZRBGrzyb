@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategorie";

    Layout = "_AdminLayout";
}

<div class="text-center m-4">
    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Powrót</a>
</div>

<table class="table table-striped table-bordered table-sm admin" align="center">
    <tr>
        <th class="text-right">ID</th>
        <th class="text-center">Kategoria</th>
        <th class="text-center">Kategoria Routing</th>
        <th class="text-center">Akcja</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td class="text-right">
                @item.CategoryID
            </td>
            <td class="text-center">
                @item.Name
            </td>
            <td class="text-center">
                @item.RouteName
            </td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-categoryId="@item.CategoryID">
                        Edytuj
                    </a>
                    <input type="hidden" name="CategoryID" value="@item.CategoryID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Usuń
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj kategorię</a>
</div>